{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}
<div class="row">
    <form class="col s12" action="{{ path("fos_user_security_check") }}" method="post">
        {% if csrf_token %}
            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
        {% endif %}
        <div class="row">
            <div class="input-field col s12">
                <label for="username">{{ 'security.login.username'|trans }}</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required"
                       autocomplete="username" class="validate"/>
            </div>
        </div>
        <div class="row">
            <div class="input-field col s12">
                <label for="password">{{ 'security.login.password'|trans }}</label>
                <input type="password" id="password" name="_password" required="required"
                       autocomplete="current-password"/>
            </div>
        </div>
        <div class="row">
            <div class="col s12">
                <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
            </div>
        </div>
        <div class="row">
            <div class="col s12 m6">
                <input class="btn btn-primary" type="submit" value="{{ 'security.login.submit'|trans }}"/>
            </div>
        </div>
        <div class="row">
            <div class="col s12 m6">
                <a href="{{ path("fos_user_resetting_request") }}" class="waves-effect waves-light btn">Mot de passe
                    oubli√©</a>
            </div>
        </div>
    </form>
</div>
